{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["apps/web/src/*"],
      "@purplesector/plugin-api": ["packages/plugin-api/src"],
      "@purplesector/plugin-agent": ["packages/plugin-agent/src"],
      "@purplesector/plugin-agent/server": ["packages/plugin-agent/src/plugin.server"],
      "@purplesector/plugin-registry": ["packages/plugin-registry/src"],
      "@purplesector/web-charts": ["packages/web-charts/src"],
      "@purplesector/plugin-core-lap-telemetry": ["packages/plugin-core-lap-telemetry/src"],
      "@purplesector/plugin-vehicles": ["packages/plugin-vehicles/src"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
