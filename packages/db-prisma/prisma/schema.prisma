
// Prisma schema for Purple Sector telemetry database

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Event {
  id              String   @id @default(cuid())
  name            String
  description     String?
  location        String?
  startDate       DateTime?
  endDate         DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  sessions        Session[]
  
  @@index([createdAt])
}

model Session {
  id                      String   @id @default(cuid())
  eventId                 String
  name                    String
  source                  String   // "live" | "demo"
  status                  String   @default("active") // "active" | "paused" | "archived"
  started                 Boolean  @default(false) // Whether telemetry collection has been started
  tags                    String?  // JSON array of session tags
  plotConfigs             String?  // JSON array of plot configurations
  vehicleId               String?
  vehicleConfigurationId  String?
  vehicleSetupId          String?
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
  
  event                   Event                 @relation(fields: [eventId], references: [id], onDelete: Cascade)
  vehicle                 Vehicle?              @relation(fields: [vehicleId], references: [id], onDelete: SetNull)
  vehicleConfiguration    VehicleConfiguration? @relation(fields: [vehicleConfigurationId], references: [id], onDelete: SetNull)
  vehicleSetup            VehicleSetup?         @relation(fields: [vehicleSetupId], references: [id], onDelete: SetNull)
  laps                    Lap[]
  
  @@index([eventId])
  @@index([vehicleId])
  @@index([createdAt])
}

model Lap {
  id              String   @id @default(cuid())
  sessionId       String
  lapNumber       Int
  lapTime         Float?   // in seconds
  telemetryData   String   // JSON string of telemetry frames
  analyzed        Boolean  @default(false)
  suggestions     String?  // JSON array of AI suggestions
  driverComments  String?  // Driver's notes about the lap
  tags            String?  // JSON array of tags
  plotConfigs     String?  // JSON array of plot configurations
  createdAt       DateTime @default(now())
  
  session         Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  chatMessages    ChatMessage[]
  
  @@unique([sessionId, lapNumber])
  @@index([sessionId, lapNumber])
}

model ChatMessage {
  id              String   @id @default(cuid())
  lapId           String
  role            String   // "user" | "assistant"
  content         String
  createdAt       DateTime @default(now())
  
  lap             Lap      @relation(fields: [lapId], references: [id], onDelete: Cascade)
  
  @@index([lapId, createdAt])
}

model SavedPlotLayout {
  id              String   @id @default(cuid())
  name            String
  description     String?
  plotConfigs     String   // JSON array of PlotConfig[]
  layout          String   // JSON of PlotLayout
  isDefault       Boolean  @default(false)
  context         String   @default("global") // "global" | "session" | "lap"
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([isDefault, context])
  @@index([createdAt])
}

model SavedAnalysisLayout {
  id          String   @id @default(cuid())
  name        String
  description String?
  // JSON blob describing analysis panel instances and grid options
  layout      String
  // Arbitrary string context, e.g. "lap:<lapId>", "session:<sessionId>", "global:live"
  context     String   @default("global")
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([context, isDefault])
  @@index([createdAt])
}

model Vehicle {
  id                    String                 @id @default(cuid())
  name                  String
  description           String?
  inServiceDate         DateTime?
  outOfServiceDate      DateTime?
  tags                  String?                // JSON array of tags
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt
  
  configurations        VehicleConfiguration[]
  setups                VehicleSetup[]
  sessions              Session[]
  
  @@index([createdAt])
}

model VehicleConfiguration {
  id              String   @id @default(cuid())
  vehicleId       String
  name            String
  description     String?
  parts           String   // JSON object of parts (e.g., {"frontWing": "High Downforce", "rearWing": "Medium", ...})
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  vehicle         Vehicle  @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  setups          VehicleSetup[]
  sessions        Session[]
  
  @@index([vehicleId])
  @@index([createdAt])
}

model VehicleSetup {
  id                      String                @id @default(cuid())
  vehicleId               String
  vehicleConfigurationId  String?
  name                    String
  description             String?
  parameters              String                // JSON object of setup parameters (e.g., {"weightDistribution": "52/48", "rideHeight": "50mm", ...})
  createdAt               DateTime              @default(now())
  updatedAt               DateTime              @updatedAt
  
  vehicle                 Vehicle               @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  vehicleConfiguration    VehicleConfiguration? @relation(fields: [vehicleConfigurationId], references: [id], onDelete: SetNull)
  sessions                Session[]
  
  @@index([vehicleId])
  @@index([vehicleConfigurationId])
  @@index([createdAt])
}

model MathChannel {
  id          String   @id @default(cuid())
  label       String
  unit        String
  expression  String   // mathjs expression
  inputs      String   // JSON array of MathChannelInput[] with channelId and alias
  validated   Boolean  @default(false) // Whether the expression has been validated
  comment     String?  // Optional description/documentation for the channel
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([createdAt])
}

