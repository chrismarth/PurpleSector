
// Prisma schema for Purple Sector telemetry database

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Event {
  id              String   @id @default(cuid())
  userId          String
  name            String
  description     String?
  location        String?
  startDate       DateTime?
  endDate         DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  sessions        Session[]

  // Plugin: agent
  runPlans        RunPlan[]
  
  @@index([createdAt])
  @@index([userId])
}

model Session {
  id                      String   @id @default(cuid())
  userId                  String
  eventId                 String
  name                    String
  source                  String   // "live" | "demo"
  status                  String   @default("active") // "active" | "paused" | "archived"
  started                 Boolean  @default(false) // Whether telemetry collection has been started
  tags                    String?  // JSON array of session tags
  plotConfigs             String?  // JSON array of plot configurations
  vehicleId               String?
  vehicleConfigurationId  String?
  vehicleSetupId          String?
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
  
  user                    User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  event                   Event                 @relation(fields: [eventId], references: [id], onDelete: Cascade)
  vehicle                 Vehicle?              @relation(fields: [vehicleId], references: [id], onDelete: SetNull)
  vehicleConfiguration    VehicleConfiguration? @relation(fields: [vehicleConfigurationId], references: [id], onDelete: SetNull)
  vehicleSetup            VehicleSetup?         @relation(fields: [vehicleSetupId], references: [id], onDelete: SetNull)
  laps                    Lap[]

  // Plugin: agent
  runPlanItem             RunPlanItem?
  
  @@index([eventId])
  @@index([userId])
  @@index([vehicleId])
  @@index([createdAt])
}

model Lap {
  id              String   @id @default(cuid())
  userId          String
  sessionId       String
  lapNumber       Int
  lapTime         Float?   // in seconds
  telemetryData   String   // JSON string of telemetry frames
  analyzed        Boolean  @default(false)
  suggestions     String?  // JSON array of AI suggestions
  driverComments  String?  // Driver's notes about the lap
  tags            String?  // JSON array of tags
  plotConfigs     String?  // JSON array of plot configurations
  createdAt       DateTime @default(now())
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  session         Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  chatMessages    ChatMessage[]
  
  @@unique([sessionId, lapNumber])
  @@index([sessionId, lapNumber])
  @@index([userId])
}

model ChatMessage {
  id              String   @id @default(cuid())
  userId          String
  lapId           String
  role            String   // "user" | "assistant"
  content         String
  createdAt       DateTime @default(now())
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  lap             Lap      @relation(fields: [lapId], references: [id], onDelete: Cascade)
  
  @@index([lapId, createdAt])
  @@index([userId, createdAt])
}

model SavedPlotLayout {
  id              String   @id @default(cuid())
  userId          String
  name            String
  description     String?
  plotConfigs     String   // JSON array of PlotConfig[]
  layout          String   // JSON of PlotLayout
  isDefault       Boolean  @default(false)
  context         String   @default("global") // "global" | "session" | "lap"
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([isDefault, context])
  @@index([createdAt])
  @@index([userId])
}

model SavedAnalysisLayout {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  // JSON blob describing analysis panel instances and grid options
  layout      String
  // Arbitrary string context, e.g. "lap:<lapId>", "session:<sessionId>", "global:live"
  context     String   @default("global")
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([context, isDefault])
  @@index([createdAt])
  @@index([userId])
}

model Vehicle {
  id                    String                 @id @default(cuid())
  userId                String
  name                  String
  description           String?
  inServiceDate         DateTime?
  outOfServiceDate      DateTime?
  tags                  String?                // JSON array of tags
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt
  
  user                  User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  configurations        VehicleConfiguration[]
  setups                VehicleSetup[]
  sessions              Session[]

  // Plugin: agent
  runPlanItems          RunPlanItem[]
  
  @@index([createdAt])
  @@index([userId])
}

model VehicleConfiguration {
  id              String   @id @default(cuid())
  userId          String
  vehicleId       String
  name            String
  description     String?
  parts           String   // JSON object of parts (e.g., {"frontWing": "High Downforce", "rearWing": "Medium", ...})
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  vehicle         Vehicle  @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  setups          VehicleSetup[]
  sessions        Session[]

  // Plugin: agent
  runPlanItems    RunPlanItem[]
  
  @@index([vehicleId])
  @@index([createdAt])
  @@index([userId])
}

model VehicleSetup {
  id                      String                @id @default(cuid())
  userId                  String
  vehicleId               String
  vehicleConfigurationId  String?
  name                    String
  description             String?
  parameters              String                // JSON object of setup parameters (e.g., {"weightDistribution": "52/48", "rideHeight": "50mm", ...})
  createdAt               DateTime              @default(now())
  updatedAt               DateTime              @updatedAt
  
  user                    User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  vehicle                 Vehicle               @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  vehicleConfiguration    VehicleConfiguration? @relation(fields: [vehicleConfigurationId], references: [id], onDelete: SetNull)
  sessions                Session[]

  // Plugin: agent
  runPlanItems            RunPlanItem[]
  
  @@index([vehicleId])
  @@index([vehicleConfigurationId])
  @@index([createdAt])
  @@index([userId])
}

model MathChannel {
  id          String   @id @default(cuid())
  userId      String
  label       String
  unit        String
  expression  String   // mathjs expression
  inputs      String   // JSON array of MathChannelInput[] with channelId and alias
  validated   Boolean  @default(false) // Whether the expression has been validated
  comment     String?  // Optional description/documentation for the channel
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([createdAt])
  @@index([userId])
}

model User {
  id              String   @id
  username        String   @unique
  fullName        String
  avatarUrl       String?  // URL or path to the user's avatar image
  role            String   // "ORG_ADMIN" | "USER" (stubbed for now)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  settings        UserSettings?
  events          Event[]
  sessions        Session[]
  laps            Lap[]
  vehicles        Vehicle[]
  vehicleConfigurations VehicleConfiguration[]
  vehicleSetups    VehicleSetup[]
  plotLayouts     SavedPlotLayout[]
  analysisLayouts SavedAnalysisLayout[]
  mathChannels    MathChannel[]
  chatMessages    ChatMessage[]

  orgMemberships  OrganizationMember[]
  groupMemberships GroupMember[]

  // Plugin: agent
  agentConversations AgentConversation[]
  runPlans           RunPlan[]
}

model UserSettings {
  userId    String  @id
  theme     String? // "light" | "dark"
  data      String? // JSON blob for additional settings
  updatedAt DateTime @updatedAt

  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members   OrganizationMember[]
  groups    Group[]
}

model OrganizationMember {
  id             String   @id @default(cuid())
  organizationId String
  userId         String
  role           String   // "ADMIN" | "MEMBER"
  createdAt      DateTime @default(now())

  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([organizationId, userId])
  @@index([userId])
}

model Group {
  id             String   @id @default(cuid())
  organizationId String
  name           String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  members        GroupMember[]

  @@index([organizationId])
}

model GroupMember {
  id      String @id @default(cuid())
  groupId String
  userId  String
  createdAt DateTime @default(now())

  group   Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user    User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId])
  @@index([userId])
}

